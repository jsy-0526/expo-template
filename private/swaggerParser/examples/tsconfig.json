{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist-examples",
    "rootDir": "./"
  },
  "include": ["examples/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
